              <form action="/posts/<%=post.title%>" method="get">
                <button class="btn btn-git" style="background-color: #F99B7D;color: black;">gerisini oku</button>
              </form>
            </div>
            <div class="col-6">
              <form action="/duzenle/<%=post.title%>" method="get" class="giz" >
                <button class="btn btn-git giz" style="background-color: #F99B7D;color: black;"type="submit">d√ºzenle</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
